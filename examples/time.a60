    c̲o̲m̲m̲e̲n̲t̲ Print time of day as HH : MM : SS.mmm;
    r̲e̲a̲l̲ hour, min, sec;

    sec := TIMEOFDAY;
    hour := entier(sec / 3600);
    sec := sec - hour * 3600;
    min := entier(sec / 60);
    sec := sec - min * 60;

    ABSFIXT(2, 0, hour);
    PRINTTEXT(`:');
    ABSFIXT(2, 0, min);
    PRINTTEXT(`:');
    ABSFIXT(2, 3, sec);
    NLCR
