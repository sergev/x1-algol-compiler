    c̲o̲m̲m̲e̲n̲t̲ Print time of day as HH : MM : SS.mmm;
    r̲e̲a̲l̲ t, hour, min, sec;

    t := TIMEOFDAY;
    hour := entier(t / 3600);
    t := t - hour * 3600;
    min := entier(t / 60);
    sec := t - min * 60;

    ABSFIXT(2, 0, hour);
    PRINTTEXT(`:');
    ABSFIXT(2, 0, min);
    PRINTTEXT(`:');
    ABSFIXT(2, 3, sec);
    NLCR
